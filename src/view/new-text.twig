{% extends "base.twig" %}

{% block title %}New Text{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="py-5">Neuer Text</h1>

        <div class="alert alert-danger d-none" role="alert" id="new-text-error"></div>

        <form id="new-text" action="/text/new" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Titel</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="title" name="title">
                </div>
            </div>

            <div class="form-group row">
                <label for="language" class="col-sm-2 col-form-label">Sprache</label>

                <div class="col-sm-10">
                    <select class="form-control" id="language" name="language">
                        <option value="">Sprache...</option>

                        {% for language in languages %}
                            <option value="{{ language.id }}">{{ language.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="text" class="col-sm-2 col-form-label">Text</label>

                <div class="col-sm-10">
                    <textarea class="form-control" id="text" name="text" rows="8"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label for="audio" class="col-sm-2 col-form-label">Audio</label>

                <div class="col-sm-10">
                    <input type="file" class="form-control-file" id="audio" name="audio">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Speichern</button>
        </form>
    </div>
{% endblock %}

{% block js %}

<script>
$(NewTextPage.init);
</script>

{% endblock %}
