{% extends "base.twig" %}

{% block title %}Study{% endblock %}

{% block content %}
    <div id="keymap" data-toggle="modal" data-target="#modal-keymap">
        <span class="oi oi-question-mark"></span>
    </div>

    <div class="modal fade" id="modal-keymap" tabindex="-1" role="dialog" aria-labelledby="modal-keymap-title" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-keymap-title">Keymap</h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>Beschreibung</th>
                            <th>Kürzel</th>
                        </tr>
                        <tr>
                            <td>Wort rechts fokusieren</td>
                            <td><kbd><kbd>ctrl</kbd> + <kbd>▶</kbd></kbd></td>
                        </tr>
                        <tr>
                            <td>Wort links fokusieren</td>
                            <td><kbd><kbd>ctrl</kbd> + <kbd>◀</kbd></kbd></td>
                        </tr>
                        <tr>
                            <td>Audio 2 Sekunden nach vorn springen</td>
                            <td><kbd>▶</kbd></td>
                        </tr>
                        <tr>
                            <td>Audio 2 Sekunden nach hinten springen</td>
                            <td><kbd>◀</kbd></td>
                        </tr>
                        <tr>
                            <td>Audio schneller machen</td>
                            <td><kbd>▲</kbd></td>
                        </tr>
                        <tr>
                            <td>Audio langsamer machen</td>
                            <td><kbd>▼</kbd></td>
                        </tr>
                        <tr>
                            <td>Audio langsamer machen</td>
                            <td><kbd>▼</kbd></td>
                        </tr>
                        <tr>
                            <td>Audio Play/Pause</td>
                            <td><kbd>Space</kbd></td>
                        </tr>
                        <tr>
                            <td>Popup schliessen</td>
                            <td><kbd>Esc</kbd></td>
                        </tr>
                    </table>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div id="text-content">
            <h1 class="display-4">{{ title|default('kein Titel vorhanden') }}</h1>

            <div id="text-content-text">
                {{ paragraphs|default('kein Text vorhanden')|raw }}
            </div>
        </div>
    </div>

    <div class="tools">
        <div class="tools-translate">
            <div class="input-group mb-3">
                <input
                    class="form-control form-control-sm"
                    type="text"
                    placeholder="Übersetzung"
                    name="word-translation"
                    autocapitalize="none">

                <div class="input-group-append">
                    <button
                        class="btn btn-outline-secondary btn-sm"
                        type="button"
                        id="add-translation">
                        <span class="oi oi-check"></span>
                    </button>
                </div>
            </div>
        </div>

        <div class="row"></div>

        <div class="tools-colors">
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    style="background-color: #ffffff;"
                    value="0">
            </div>
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    class="color-1"
                    value="1">
            </div>
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    class="color-2"
                    value="2">
            </div>
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    class="color-3"
                    value="3">
            </div>
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    class="color-4"
                    value="4">
            </div>
            <div>
                <input
                    type="button"
                    name="text-word-color"
                    class="color-5"
                    value="5">
            </div>
        </div>
    </div>

    <div id="player">
        <div id="progress-bar-wrapper">
            <div id="progress-bar"></div>
        </div>

        <div id="actions">
            <ul class="list-unstyled">
                <li id="action-jump-left">
                    <span class="oi oi-action-undo"></span>
                </li>

                <li id="action-toggle-play">
                    <span class="oi oi-media-play"></span>
                </li>

                <li id="action-jump-right">
                    <span class="oi oi-action-redo"></span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
    $(function () {
        Study.init('{{ audio }}');
    });
    </script>
{% endblock %}
